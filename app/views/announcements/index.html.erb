<div class="nom-holder" > 
    <div class="col-md-12">

<h1>Announcements</h1>
<%= link_to 'Make New Announcement', new_announcement_path,  :class => "link-to" %>
<div> <br> </div> 
<table>
  <thead>
    <tr>
      <th>General</th>
      <th>Manufacturing</th>
      <th>WFL</th>
      <th>Bdays</th>
      <th>Anniv</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.part_one %></td>
        <td><%= announcement.part_two %></td>
        <td><%= announcement.wfl %></td>
        <td><%= announcement.bdays %></td>
        <td><%= announcement.anniversarys %></td>
       
        <td><%= link_to 'Edit', edit_announcement_path(announcement),  :class => "link-to"  %></td>
        <td><%= link_to 'Delete', announcement, method: :delete, data: { confirm: 'Are you sure?' },  :class => "link-to"  %></td>
      </tr>
      
    <% end %>
  </tbody>
</table>

<br>

</div>
</div>
